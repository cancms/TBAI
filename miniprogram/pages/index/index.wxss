.container {
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.input-section, .output-section {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-area {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.button-section {
  margin: 30rpx 0;
}

.generate-btn {
  background-color: #007AFF;
  color: #fff;
  font-size: 30rpx;
  padding: 20rpx 0;
  width: 80%;
  border-radius: 8rpx;
}

.speech-content {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.settings-icon {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 40rpx;
  color: #666;
}

.debug-toggle {
  position: absolute;
  right: 80rpx;
  top: 20rpx;
  font-size: 40rpx;
  color: #666;
}

.debug-panel {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  border: 1px solid #ddd;
}

.debug-header {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.debug-content {
  font-size: 24rpx;
}

.debug-item {
  display: flex;
  margin-bottom: 10rpx;
  padding: 10rpx;
  background-color: #fff;
  border-radius: 4rpx;
}

.debug-label {
  color: #666;
  width: 160rpx;
}

.evaluation-section {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.evaluation-content {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-wrap;
  flex-shrink: 0;
}

.debug-value {
  color: #333;
  flex: 1;
  word-break: break-all;
}

.setting-dialog .dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
}

.setting-dialog .dialog-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  z-index: 1001;
}

.dialog-header {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  border-bottom: 1px solid #eee;
}

.dialog-body {
  padding: 30rpx;
}

.dialog-body .form-item {
  margin-bottom: 20rpx;
}

.dialog-body .form-item input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-top: 10rpx;
  box-sizing: border-box;
}

.dialog-footer {
  display: flex;
  padding: 20rpx;
  border-top: 1px solid #eee;
}

.dialog-footer button {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

.dialog-footer .cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.dialog-footer .save-btn {
  background: #007AFF;
  color: #fff;
}